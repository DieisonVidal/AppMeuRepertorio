<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMeuRepertorio.View.AddMusica"
             Title="Adicionar Música">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        
        <StackLayout>
            <ScrollView>
                <StackLayout Padding="10">
                    <Label Text="Titulo:" />
                    <Entry x:Name="txt_titulo" />

                    <Label Text="Tom:" />
                    <Entry x:Name="txt_tom" />

                    <Label Text="Letra:" />
                    <Editor x:Name="txt_letra" Keyboard="Text" AutoSize="TextChanges" IsSpellCheckEnabled="false" IsTextPredictionEnabled="false" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>